Require all granted
Options -Indexes
DirectoryIndex frontController.php

RewriteEngine On

# Ne pas rediriger les fichiers statiques (CSS, JS, images)
RewriteCond %{REQUEST_URI} !^/assets/ [NC]

# Rediriger toutes les autres requêtes vers frontController.php
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ frontController.php [QSA,L]

# Forcer l'accès aux fichiers statiques
<FilesMatch "\.(css|js|png|jpg|jpeg|gif|svg|woff|woff2|ttf|eot|ico|webp)$">
    Require all granted
</FilesMatch>
